{
  "name": "polymarket-agent",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "cli": "npm run --workspace=@polymarket-agent/cli start --",
    "lint": "eslint packages/*/src",
    "format": "prettier --write 'packages/*/src/**/*.ts'",
    "format:check": "prettier --check 'packages/*/src/**/*.ts'",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "eslint": "^9.20.0",
    "prettier": "^3.5.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.24.0",
    "vitest": "^3.0.0"
  }
}
